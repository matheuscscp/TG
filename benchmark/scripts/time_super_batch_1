#!/bin/bash

if [ "$#" != 1 ]; then
  echo "Usage mode: $0 <batch name suffix>"
  exit
fi

timeout=1000s
maxformulas=1200

(scripts/knapsack_cnf_batch nfdc1_$1 "-n -f -d -c 1" $timeout $maxformulas 0) &
pid1=$!
(scripts/knapsack_cnf_batch nfdc2_$1 "-n -f -d -c 2" $timeout $maxformulas 0) &
pid2=$!
(scripts/knapsack_cnf_batch nfdr1c1_$1 "-n -f -d -r 1 -c 1" $timeout $maxformulas 0) &
pid3=$!
(scripts/knapsack_cnf_batch nfdr1c2_$1 "-n -f -d -r 1 -c 2" $timeout $maxformulas 0) &
pid4=$!
(scripts/knapsack_cnf_batch nfdr2c1_$1 "-n -f -d -r 2 -c 1" $timeout $maxformulas 0) &
pid5=$!
(scripts/knapsack_cnf_batch nfdr2c2_$1 "-n -f -d -r 2 -c 2" $timeout $maxformulas 0) &
pid6=$!
wait $pid1 $pid2 $pid3 $pid4 $pid5 $pid6

